{
  "name": "@penumbra-zone/crypto-web",
  "version": "3.0.11",
  "license": "(MIT OR Apache-2.0)",
  "type": "module",
  "engine": {
    "node": ">=22"
  },
  "scripts": {
    "build": "tsup --clean --entry 'src/*.ts' --entry '!src/*.test.ts' --dts --minify --keep-names --format esm",
    "clean": "rm -rfv dist package penumbra-zone-*.tgz",
    "lint": "eslint src",
    "prepack": "$npm_execpath run build",
    "test": "vitest run"
  },
  "files": [
    "dist"
  ],
  "exports": {
    "./*": "./src/*.ts"
  },
  "publishConfig": {
    "exports": {
      "./*": {
        "default": "./dist/*.js",
        "types": "./dist/*.d.ts"
      }
    }
  },
  "dependencies": {
    "@penumbra-zone/types": "workspace:*",
    "bip39": "^3.1.0",
    "crypto-js": "^4.2.0"
  },
  "devDependencies": {
    "@types/crypto-js": "^4.2.2"
  }
}
