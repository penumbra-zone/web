{
  "name": "@penumbra-zone/perspective",
  "version": "1.0.2",
  "license": "(MIT OR Apache-2.0)",
  "description": "Tools for assuming different perspectives of Penumbra transactions",
  "type": "module",
  "scripts": {
    "build": "vite build",
    "clean": "rm -rfv dist",
    "lint": "eslint \"**/*.ts*\"",
    "test": "vitest run"
  },
  "exports": {
    "./*": "./*.ts"
  },
  "publishConfig": {
    "files": [
      "./dist"
    ],
    "exports": {
      "./plan/*": "./dist/plan/*.js",
      "./transaction/*": "./dist/transaction/*.js",
      "./translators/*": "./dist/translators/*.js"
    }
  },
  "dependencies": {
    "@penumbra-zone/bech32m": "workspace:*",
    "@penumbra-zone/types": "workspace:*",
    "@penumbra-zone/wasm": "workspace:*"
  },
  "devDependencies": {
    "@buf/penumbra-zone_penumbra.bufbuild_es": "1.8.0-20240331004851-c3b058e666bc.2"
  },
  "peerDependencies": {
    "@buf/penumbra-zone_penumbra.bufbuild_es": "1.8.0-20240331004851-c3b058e666bc.2"
  }
}
