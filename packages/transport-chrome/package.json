{
  "name": "@penumbra-zone/transport-chrome",
  "version": "2.2.2",
  "license": "(MIT OR Apache-2.0)",
  "description": "Tools for adapting `@penumbra-zone/transport` to Chrome's extension runtime messaging API",
  "scripts": {
    "build": "tsc",
    "clean": "rm -rfv dist package penumbra-zone-transport-chrome-*.tgz",
    "lint": "eslint src",
    "prebuild": "$npm_execpath run clean",
    "prepack": "$npm_execpath run build",
    "test": "vitest run"
  },
  "files": [
    "dist",
    "!dist/**/*.test.*",
    "!dist/**/*.map"
  ],
  "exports": {
    ".": "./src/index.ts",
    "./*": "./src/*.ts"
  },
  "publishConfig": {
    "exports": {
      ".": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "./*": {
        "default": "./dist/*.js",
        "types": "./dist/*.d.ts"
      }
    }
  },
  "dependencies": {
    "@penumbra-zone/transport-dom": "workspace:*"
  },
  "devDependencies": {
    "@bufbuild/protobuf": "^1.10.0",
    "@connectrpc/connect": "^1.4.0"
  },
  "engines": {
    "node": ">=22"
  },
  "peerDependencies": {
    "@bufbuild/protobuf": "^1.10.0",
    "@connectrpc/connect": "^1.4.0"
  }
}
