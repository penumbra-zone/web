{
  "name": "@penumbra-zone/client",
  "version": "6.1.0",
  "license": "(MIT OR Apache-2.0)",
  "description": "Package for connecting to any Penumbra extension, including Prax.",
  "type": "module",
  "scripts": {
    "build": "tsup src/*.ts --dts --minify --format esm",
    "clean": "rm -rfv dist",
    "lint": "eslint src",
    "prebuild": "pnpm clean",
    "prepack": "pnpm build"
  },
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md"
  ],
  "exports": {
    ".": "./src/index.ts",
    "./prax": "./src/prax.ts"
  },
  "publishConfig": {
    "exports": {
      ".": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "./prax": {
        "types": "./dist/prax.d.ts",
        "default": "./dist/prax.js"
      }
    }
  },
  "dependencies": {
    "@penumbra-zone/protobuf": "workspace:*",
    "@penumbra-zone/transport-dom": "workspace:*"
  },
  "devDependencies": {
    "@connectrpc/connect": "^1.4.0",
    "tsup": "^8.1.0"
  },
  "peerDependencies": {
    "@bufbuild/protobuf": "^1.10.0",
    "@connectrpc/connect": "^1.4.0"
  }
}
