{
  "name": "@penumbra-zone/client",
  "version": "0.0.1",
  "description": "Client to Penumbra providers such as Prax",
  "type": "module",
  "scripts": {
    "build": "tsc && vite build",
    "clean": "rm -rfv dist"
  },
  "exports": {
    ".": "./src/index.ts",
    "./*": "./src/*.ts"
  },
  "publishConfig": {
    "files": [
      "dist"
    ],
    "exports": {
      ".": {
        "import": "./dist/src/index.js",
        "types": "./dist/src/index.d.ts"
      },
      "./*": {
        "import": "./dist/src/*.js",
        "types": "./dist/src/*.d.ts"
      }
    }
  },
  "dependencies": {
    "@penumbra-zone/transport-dom": "workspace:*"
  }
}
