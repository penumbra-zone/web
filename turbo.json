{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "globalEnv": ["NODE_ENV"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build", "wasm#build"]
    },
    "wasm#build": {
      "dependsOn": ["^build", "compile"],
      "inputs": ["web/**"]
    },
    "wasm#compile": {
      "dependsOn": ["^compile"],
      "inputs": ["crate/Cargo.lock", "crate/Cargo.toml", "crate/target/**", "crate/src/**"],
      "outputs": ["crate/pkg/**"]
    },
    "host": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "lint": {},
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {},
    "clean": {
      "cache": false
    }
  }
}
