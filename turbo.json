{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "globalEnv": ["NODE_ENV"],
  "pipeline": {
    "build": {
      "dependsOn": ["download-keys", "compile", "^build"]
    },
    "download-keys": {},
    "compile": {
      "inputs": ["crate/src/**"],
      "outputs": ["wasm/**"]
    },
    "host": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "lint": { "dependsOn": ["compile"] },
    "dev": {
      "dependsOn": ["download-keys", "compile"],
      "persistent": true
    },
    "test": { "dependsOn": ["compile"] },
    "clean": {
      "cache": false
    }
  }
}
