{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "globalEnv": ["NODE_ENV"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"],
      "cache": false
    },
    "chrome-extension#build": {
      "dependsOn": ["^compile-wasm"],
      "outputs": [".next/**", "!.next/cache/**"],
      "cache": false
    },
    "compile-wasm": {
      "dependsOn": ["^compile-wasm"],
      "outputs": []
    },
    "host": {
      "dependsOn": ["^build"],
      "outputs": [],
      "cache": false
    },
    "lint": {},
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {},
    "clean": {
      "cache": false
    }
  }
}
