{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "globalEnv": ["DEV"],
  "tasks": {
    "//#clean:vitest-mjs": {
      "cache": false
    },
    "//#format:prettier": {
      "cache": false
    },
    "//#format:syncpack": {
      "cache": false
    },
    "//#lint:prettier": {
      "cache": false
    },
    "//#lint:syncpack": {
      "cache": false
    },
    "build": {
      "dependsOn": ["compile", "proto", "^build"],
      "outputs": ["dist/**", "*.tsbuildinfo"]
    },
    "proto": {
      "dependsOn": ["^proto"],
      "inputs": ["package.json", "buf.gen.yaml", "proto/**"],
      "outputs": ["gen/**"]
    },
    "clean": {
      "cache": false,
      "dependsOn": ["//#clean:vitest-mjs"]
    },
    "compile": {
      "inputs": ["crate/src/**", "crate/Cargo.toml", "crate/Cargo.lock"],
      "outputs": ["wasm/**"]
    },
    "dev:app": {
      "dependsOn": ["compile", "proto"],
      "persistent": true
    },
    "dev:compile": {
      "dependsOn": ["compile"],
      "persistent": true
    },
    "dev:pack": {
      "dependsOn": ["compile", "proto"],
      "outputs": ["dist/**", "*.tsbuildinfo"],
      "persistent": true
    },
    "format": {
      "dependsOn": ["//#format:syncpack", "//#format:prettier", "format:rust"]
    },
    "format:rust": {
      "cache": false
    },
    "host": {
      "cache": false,
      "dependsOn": ["build"],
      "persistent": true
    },
    "lint": {
      "dependsOn": ["//#lint:syncpack", "//#lint:prettier", "compile", "proto"],
      "inputs": ["components", "lib", "src", "wasm", "package.json"]
    },
    "lint:strict": {
      "dependsOn": ["//#lint:syncpack", "//#lint:prettier", "compile", "proto"],
      "cache": false
    },
    "lint:fix": {
      "dependsOn": ["compile", "proto"],
      "cache": false
    },
    "lint:rust": {
      "dependsOn": ["compile"],
      "inputs": ["crate/src/**", "crate/Cargo.toml", "crate/Cargo.lock", "crate/tests/**"]
    },
    "test": {
      "cache": false,
      "dependsOn": ["compile", "proto"]
    },
    "test:wasm": {
      "dependsOn": ["compile"],
      "inputs": ["crate/src/**", "crate/Cargo.toml", "crate/Cargo.lock", "crate/tests/**"]
    },
    "test:cargo": {
      "inputs": ["crate/src/**", "crate/Cargo.toml", "crate/Cargo.lock", "crate/tests/**"]
    }
  }
}
